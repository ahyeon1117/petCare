<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pet.care.pc.dao.mapper.StoreMapper">
  <select id="findByUser" resultType="Store">
    SELECT
      *
    FROM 
      store
    WHERE
      user_id = ${userId}
    AND
      platform = ${platform}
    ORDER BY name ASC
  </select>
</mapper>